                            </div>
                            <div class="col-2 m-1 p-2 ">
                                <label>
                                    <input type="checkbox" id="swVitalicioF" class="js-switch" checked /> Vitalicio
                                </label>
                            </div>
                            <div class="col-1  m-0 p-0">
                                <button type="button" class="btn btn-secondary" onclick="abrirModal(null)">Filtrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- compose -->
    <div class="compose col-md-6" id="compose">
