@using Frontend.Models
@model Socio
@{
    ViewBag.Title = "Socios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .contenedor-scroll {
        overflow-x: hidden; /* Deshabilitar scroll horizontal */
        /* Puedes añadir overflow-y: hidden; si también necesitas deshabilitar el scroll vertical */
        width: 715px; /* Ajusta la anchura según tus necesidades */
        height: 120px; /* Ajusta la altura según tus necesidades */
        /*border: 1px solid black;  Para ver los límites del contenedor */
    }

    /* Adapts a floating label for use with a left-handed input group icon */
    .form-floating > .bi-calendar-date + .datepicker_input + label {
        padding-left: 3.5rem;
        z-index: 3;
    }

    table.dataTable td {
        font-size: 1em; /* O el tamaño que desees, por ejemplo 1.1em, 12px, etc. */
    }

    /* Cambiar el tamaño de fuente de los encabezados de la tabla
                                    table.dataTable th {
